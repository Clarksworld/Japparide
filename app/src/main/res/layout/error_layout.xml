<?xml version="1.0" encoding="utf-8"?><androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#9F000000">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="@dimen/twenty_dp"
        android:background="@drawable/app_layout_twenty_curve">


        <ImageView
            android:id="@+id/error_image"
            android:layout_width="@dimen/hundred_fifty_dp"
            android:layout_height="@dimen/hundred_fifty_dp"
            android:src="@drawable/load_error_image"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="@dimen/twenty_dp"
            android:fitsSystemWindows="true"
            android:background="@color/white"/>

        <TextView
            android:id="@+id/input_message"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/five_dp"
            android:layout_marginRight="@dimen/five_dp"
            android:layout_height="wrap_content"
            android:text="input required"
            app:layout_constraintTop_toBottomOf="@id/error_image"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="@dimen/ten_dp"
            android:fontFamily="@font/poppins_medium"
            android:textAlignment="center"
            android:textSize="@dimen/twelve_sp"
            android:textColor="@color/red"/>

        <Button
            android:id="@+id/input_dismiss_message"
            android:layout_width="match_parent"
            android:textAlignment="center"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Click to Dismiss"
            android:textColor="@color/white"
            android:textSize="@dimen/fourteen_sp"
            android:padding="@dimen/ten_dp"
            android:layout_marginTop="@dimen/thirty_dp"
            android:layout_marginLeft="@dimen/fifty_dp"
            android:layout_marginRight="@dimen/fifty_dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/input_message"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>